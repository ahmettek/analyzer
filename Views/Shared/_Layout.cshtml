@using DotNet8.WebApi.Helpers
<!DOCTYPE html>
<html lang="tr">
  <head>
    @{
        var pageTitle = ViewData["Title"]?.ToString() ?? "İngilizce Kartlar - Ücretsiz İngilizce Öğren";
        var pageDescription = ViewData["Description"]?.ToString() ?? "İngilizceyi en kolay şekilde öğrenmeni sağlayacak bu sistem ve online ingilizce kitabı sayesinde hayallerine bir adım kaldı.";
        var pageSlug = ViewData["Slug"]?.ToString();
        var pageImage = ViewData["Image"]?.ToString();
        var pageType = ViewData["PageType"]?.ToString() ?? "website";
    }
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>@pageTitle</title>
    <meta name="description" content="@pageDescription">
    
    <!-- Canonical URL -->
    @Html.Raw(SeoHelper.GenerateCanonicalTag(pageSlug))
    
    <!-- Open Graph Meta Tags -->
    @Html.Raw(SeoHelper.GenerateOpenGraphTags(pageTitle, pageDescription, pageSlug, pageImage, pageType))
    
    <!-- Twitter Card Meta Tags -->
    @Html.Raw(SeoHelper.GenerateTwitterCardTags(pageTitle, pageDescription, pageImage))
    
    <!-- Preconnect for Performance -->
    @Html.Raw(SeoHelper.GeneratePreconnectTags())
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.png">
    <link rel="apple-touch-icon" href="/image/logo.png">
    
    <!-- Google Site Verification -->
    <meta name="google-site-verification" content="04JFf6kSJkXsLMMkdfmj7GEdKpS-jT63tVAiHJ4ZVeU" />
    
    <!-- Google Analytics - async for non-blocking -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-SHDJ00HG1X"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-SHDJ00HG1X');
    </script>
    
    <style data-tag="reset-style-sheet">
      html {  line-height: 1.15;}body {  margin: 0;}* {  box-sizing: border-box;  border-width: 0;  border-style: solid;}p,li,ul,pre,div,h1,h2,h3,h4,h5,h6,figure,blockquote,figcaption {  margin: 0;  padding: 0;}button {  background-color: transparent;}button,input,optgroup,select,textarea {  font-family: inherit;  font-size: 100%;  line-height: 1.15;  margin: 0;}button,select {  text-transform: none;}button,[type="button"],[type="reset"],[type="submit"] {  -webkit-appearance: button;}button::-moz-focus-inner,[type="button"]::-moz-focus-inner,[type="reset"]::-moz-focus-inner,[type="submit"]::-moz-focus-inner {  border-style: none;  padding: 0;}button:-moz-focus,[type="button"]:-moz-focus,[type="reset"]:-moz-focus,[type="submit"]:-moz-focus {  outline: 1px dotted ButtonText;}a {  color: inherit;  text-decoration: inherit;}input {  padding: 2px 4px;}img {  display: block;}html { scroll-behavior: smooth  }
    </style>
    <style data-tag="default-style-sheet">
      html {
        font-family: Inter;
        font-size: 16px;
      }

      body {
        font-weight: 400;
        font-style:normal;
        text-decoration: none;
        text-transform: none;
        letter-spacing: normal;
        line-height: 1.15;
        color: var(--dl-color-gray-black);
        background-color: var(--dl-color-gray-white);
      }
    </style>
    <style>
       body::-webkit-scrollbar {
         width: 0.5em;
         z-index: 100;
         background-color:transparent;
       }
      body::-webkit-scrollbar-thumb {
         background-color:white;
         box-shadow:0 -100vh 0 100vh #5128f5;
       }
    </style>
    <link rel="stylesheet" href="./style.css" />
    
    @await RenderSectionAsync("Head", required: false)
  </head>
<body>
<div>
<!-- Deferred external script for better FCP -->
